                        <label for="calc-stdDev">Standard Deviation (σ)</label>
                        <input type="number" id="calc-stdDev" value="1" step="0.1" min="0.1">
                    </div>
                    
                    <div class="calculator-input">
                        <label for="calc-lower">Lower Bound</label>
                        <input type="number" id="calc-lower" value="-1" step="0.1">
                    </div>
                    
                    <div class="calculator-input">
                        <label for="calc-upper">Upper Bound</label>
                        <input type="number" id="calc-upper" value="1" step="0.1">
                    </div>
                </div>
                
