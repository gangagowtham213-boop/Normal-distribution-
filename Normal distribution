    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Get DOM elements
        const meanSlider = document.getElementById('mean');
        const stdDevSlider = document.getElementById('stdDev');
        const xValueSlider = document.getElementById('xValue');
        const meanValueDisplay = document.getElementById('mean-value');
        const stdDevValueDisplay = document.getElementById('stdDev-value');
        const xValueDisplay = document.getElementById('xValue-value');
        const probabilityDisplay = document.getElementById('probability-value');
        
        const calcMean = document.getElementById('calc-mean');
        const calcStdDev = document.getElementById('calc-stdDev');
        const calcLower = document.getElementById('calc-lower');
        const calcUpper = document.getElementById('calc-upper');
        const calculateBtn = document.getElementById('calculate-btn');
        const calcResult = document.getElementById('calc-result');
        
        // Initialize chart
        const ctx = document.getElementById('distributionChart').getContext('2d');
        let distributionChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [],
                datasets: [{
                    label: 'Normal Distribution',
                    data: [],
                    borderColor: '#3498db',
                    backgroundColor: 'rgba(52, 152, 219, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'X'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Probability Density'
                        },
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return `Probability: ${context.parsed.y.toFixed(4)}`;
                            }
                        }
                    }
                }
            }
        });
        
        // Normal distribution PDF function
        function normalPDF(x, mean, stdDev) {
            const variance = stdDev * stdDev;
            const coefficient = 1 / (stdDev * Math.sqrt(2 * Math.PI));
            const exponent = -((x - mean) ** 2) / (2 * variance);
            return coefficient * Math.exp(exponent);
        }
        
        // Update chart based on slider values
        function updateChart() {
            const mean = parseFloat(meanSlider.value);
            const stdDev = parseFloat(stdDevSlider.value);
            const xValue = parseFloat(xValueSlider.value);
            
            // Update display values
            meanValueDisplay.textContent = mean;
            stdDevValueDisplay.textContent = stdDev;
            xValueDisplay.textContent = xValue;
            
            // Generate data for the chart
            const labels = [];
            const data = [];
            
            for (let x = -5; x <= 5; x += 0.1) {
                labels.push(x.toFixed(1));
                data.push(normalPDF(x, mean, stdDev));
            }
            
            // Update chart data
            distributionChart.data.labels = labels;
            distributionChart.data.datasets[0].data = data;
            
            // Calculate and display probability for current x value
            const probability = normalPDF(xValue, mean, stdDev);
            probabilityDisplay.textContent = probability.toFixed(4);
            
            // Update chart
            distributionChart.update();
        }
        
        // Calculate probability between two values
        function calculateProbability() {
            const mean = parseFloat(calcMean.value);
            const stdDev = parseFloat(calcStdDev.value);
            const lower = parseFloat(calcLower.value);
            const upper = parseFloat(calcUpper.value);
            
            if (lower >= upper) {
                calcResult.textContent = "Error: Lower bound must be less than upper bound.";
                calcResult.style.color = "red";
                return;
            }
            
            // Using the cumulative distribution function (CDF) approximation
            function normalCDF(x, mean, stdDev) {
                return 0.5 * (1 + erf((x - mean) / (stdDev * Math.sqrt(2))));
            }
            
            // Error function approximation
            function erf(x) {
                // Abramowitz and Stegun approximation
                const a1 =  0.254829592;
                const a2 = -0.284496736;
                const a3 =  1.421413741;
                const a4 = -1.453152027;
                const a5 =  1.061405429;
                const p  =  0.3275911;
                
                const sign = (x >= 0) ? 1 : -1;
                x = Math.abs(x);
                
                const t = 1.0 / (1.0 + p * x);
                const y = 1.0 - (((((a5 * t + a4) * t) + a3) * t + a2) * t + a1) * t * Math.exp(-x * x);
                
                return sign * y;
            }
            
            const probLower = normalCDF(lower, mean, stdDev);
            const probUpper = normalCDF(upper, mean, stdDev);
            const probability = probUpper - probLower;
            
            calcResult.textContent = `Probability: ${(probability * 100).toFixed(2)}% (${probability.toFixed(4)})`;
            calcResult.style.color = "green";
        }
        
        // Event listeners
        meanSlider.addEventListener('input', updateChart);
        stdDevSlider.addEventListener('input', updateChart);
        xValueSlider.addEventListener('input', updateChart);
        calculateBtn.addEventListener('click', calculateProbability);
        
        // Initialize the chart
        updateChart();
    </script>
</body>
</html>
